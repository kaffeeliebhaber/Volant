public class UIInventory {
	
	private final List<UIInventoryListener> uiInventoryListeners;
	private final UIInventoryController uiInventoryController;

	public UIInventory(final UIInventoryController uiInventoryController) {
		this.uiInventoryController = uiInventoryController;
		uiInventoryListeners = new ArrayList<UIInventoryListener>();

		addUIInventoryListener(uiInventoryController);
	}

	public void clicked() {
		// TODO: Send notification to each listener.
	}

	public void addUIInventoryListener(final UIInventoryListener l) {
		uiInventoryListeners.add(l);
	}

}



public class UIInventoryController implements UIInventoryListener {
	

	private final InventoryManager inventoryManager;
	private final EquipmentManager equipmentManager;

	public UIInventoryController(final InventoryManager inventoryManager, final EquipmentManager equipmentManager) {
		this.inventoryManager = inventoryManager;
		this.equipmentManager = equipmentManager;
	}

	public void inventorySlotClicked(final UIInventorySlot inventorySlot) {}

	public void equipmentSlotClicked(final UIInventorySlot inventorySlot) {}
}

public interface UIInventoryListenre {
	
	void inventorySlotClicked(final UIInventorySlot inventorySlot);

	void equipmentSlotClicked(final UIInventorySlot inventorySlot);
}